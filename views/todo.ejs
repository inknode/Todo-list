<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List </title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <div>
        <h1 class="main">Todo List</h1>
    </div>    
    <div class="box" id="heading">
        <h1><%= date %> </h1>
    </div>

    <div class="box">
    <% for(let everyItem of newlist){ %>
   <form action="/delete" method="post">
   <div class="item">
       <input type="checkbox" name= "checkbox" value = "<%= everyItem._id %>" onChange="this.form.submit()">
    <p><%=everyItem.name%></p>
   
    </div>
    </form>
    <% } %>        

    <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="add items" autocomplete="off">
    <button type="submit">+</button>
    </form>
</div>
 <footer>
     <div>
         <P>copyright <%=year%></P>
     </div>
 </footer>

</body>
</html>